{{define "by_port"}}
{{/* -*- mode: web; coding: utf-8; -*- */}}
{{/* Time-stamp: <2022-11-05 02:45:53 krylon> */}}
<!DOCTYPE html>
<html>
  {{ template "head" . }}

  <body>
    <h1>{{.Title}}</h1>
    <hr />

    {{if .Debug}}
    Page was rendered on {{now}}
    {{end}}

    {{if (gt (len .Error) 0)}}
    <div class="error">
      {{range .Error}}
      {{.}}<br />
      {{end}}
    </div>
    {{end}}

    {{ template "beacon" . }}

    {{ template "menu" }}

    <script type="text/javascript">
     function toggle_port_visibility(n, do_hide) {
       const containerID = `#content_port_${n}`
       if (do_hide) {
         $(containerID).hide()
       } else {
         $(containerID).show()
       }
     }
    </script>

    <script type="text/javascript">
     $(document).ready(() => {
       $('.filter_checkbox').each(() => {
         $(this).checked = false
       })
     })
    </script>

    <table class="horizontal caption-top">
      <caption>Table of contents</caption>
      <thead>
        <tr>
          <th>Port</th>
          <th>No. of hosts</th>
          <th>Hide?</th>
        </tr>
      </thead>

      <tbody>
        {{range .Ports}}
        <tr>
          <td>
            <a href="#port_{{.Port}}">{{.Port}}</a>
          </td>
          <td>
            {{len .Results}}
          </td>
          <td>
            <div class="form-check form-switch filter_checkbox">
              <input class="form-check-input" type="checkbox"
                     onchange="toggle_port_visibility({{.Port}}, this.checked)" id="checkbox_{{.Port}}"
                     />
            </div>
          </td>
        </tr>
        {{end}}
        <tr>
          <th>Total</td>
          <td><b>{{.Count}}</b></td>
        </tr>
      </tbody>
    </table>

    {{ range .Ports }}
    <div id="content_port_{{.Port}}">
      <hr />

      <table class="table caption-top">
        <thead>
          <caption>Port {{ .Port }}</caption>
          <tr>
            <th>Host</th>
            <th>Stamp</th>
            <th>Reply</th>
          </tr>
        </thead>

        <tbody id="tbody{{.Port}}">
          {{$row_class := cycle "even" "odd"}}
          {{ range .Results }}
          <tr class="{{$row_class.Next}} port_{{ .Port }}">
            <td>{{.HostName}} ({{.Address}})</td>
            <td>{{fmt_time .Stamp}}</td>
            <td><pre>{{html .ReplyString}}</pre></td>
          </tr>
          {{ end }}
        </tbody>
      </table>
    </div>
    {{ end }}

    {{template "footer"}}
  </body>
</html>
{{end}}
